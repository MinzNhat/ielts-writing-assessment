root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_style = tab
indent_size = 4
max_line_length = 80

[*.{json,yml,yaml}]
indent_style = tab
indent_size = 4

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{css,scss,sass}]
indent_style = tab
indent_size = 4
